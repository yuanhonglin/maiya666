page {
  background-color: #f7f7f7;
}
.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.top {
  padding: 80rpx 50rpx;
  background-color: #fff;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.top .top-left {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.top .top-left .img1 {
      width: 100rpx;
      height: 100rpx;
      border-radius: 50%;
      margin-right: 30rpx;
}
.top .img2 {
    width: 60rpx;
    height: 60rpx;
}
.paint {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  background: #fff;
  border-top: 10px solid #f7f7f7;
  border-bottom: 10px solid #f7f7f7;
  padding: 20rpx 0;
}
.paint .paint-num {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
}
.paint .paint-num .t1 {
      font-size: 34rpx;
      color: #333;
      margin: 20rpx;
}
.paint .paint-num .t2 {
      font-size: 34rpx;
      color: #333;
      text-align: center;
}
.item {
  padding: 40rpx 30rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 5rpx solid #f7f7f7;
}
.item .t1 {
    font-size: 34rpx;
    color: #333;
}

