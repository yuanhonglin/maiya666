
.emoji_item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	margin-right: 20px;
}
.showEmoji {
	width: 100%;
	height: 130px;
	background-color: #FFFFFF;
	padding-top: 10px;
	padding-left: 3%;
	display: block;
}
.emoji_list {
	margin-top: 30px;
	width: 100%;
	height: 145px;
	background-color: #dddddd;
	padding-top: 10px;
	padding-left: 3%;
	display: none;
}
.emoji_list image,
.showEmoji image {
	width: 26px;
	height: 26px;
	margin: 5px 2%;
}
.emoji {
	width: 26px;
	height: 26px;
	margin: 0 0;
}



